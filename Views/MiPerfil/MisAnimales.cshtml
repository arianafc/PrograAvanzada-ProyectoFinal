@model List<ProyectoFinal.EF.ObtenerMisAnimalesSP_Result>

@{
    ViewBag.Title = "MisAnimales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-minimal {
        border: 1px solid transparent;
        border-radius: 6px;
        padding: 1rem 0;
        transition: all 0.3s ease;
        cursor: pointer;
        display: block;
        color: #212529;
        font-weight: 600;
        text-decoration: none;
        border-color: #dedede;
    }

        .btn-minimal:hover,
        .btn-minimal:focus {
            border-color: #808080;
            box-shadow: 0 4px 8px #808080;
            text-decoration: none;
        }

        .btn-minimal span {
            display: block;
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }
</style>

<main class="container py-5">

    <div class="row justify-content-center mb-5 text-center">
        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MiPerfil", "MiPerfil")" class="btn-minimal">
                <span>✏️</span>
                MI INFORMACIÓN
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisDonaciones", "MiPerfil")" class="btn-minimal">
                <span>💰</span>
                MIS DONACIONES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisAnimales", "MiPerfil")" class="btn-minimal">
                <span>🐾</span>
                MIS ANIMALES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisTours", "MiPerfil")" class="btn-minimal">
                <span>🎟️</span>
                MIS ACTIVIDADES
            </a>
        </div>

    </div>

    <!-- Animales Apadrinados -->
    <div class="text-center mb-4">
        <h4 class="fw-bold">MIS ANIMALES APADRINADOS</h4>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var animal in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column text-center">
                            <img src="@Url.Content("~/" + animal.IMAGEN)" alt="@animal.NOMBRE" class="img-animal mb-3" />

                            <h5 class="card-title fw-bold">@animal.NOMBRE</h5>

                            @if (animal.FECHA_INGRESO != default(DateTime))
                            {
                                <p><strong>En refugio desde:</strong> @animal.FECHA_INGRESO.ToString("dd/MM/yyyy")</p>
                            }

                            @if (animal.FECHA_NACIMIENTO != default(DateTime))
                            {
                                <p><strong>Fecha de nacimiento:</strong> @animal.FECHA_NACIMIENTO.ToString("dd/MM/yyyy")</p>
                            }

                            @if (!string.IsNullOrEmpty(animal.NECESIDAD))
                            {
                                <p>
                                    <strong>Necesidades:</strong>
                                    @(animal.NECESIDAD.Length > 50 ? animal.NECESIDAD.Substring(0, 50) + "..." : animal.NECESIDAD)
                                </p>
                            }

                            <div class="mt-auto">
                                <button class="btn btn-outline-danger w-100">Finalizar Apadrinamiento</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4>No tienes animales apadrinados aún.</h4>
                    <p>¡Explora nuestro refugio y elige a tu nuevo ahijado!</p>
                </div>
            </div>
        }
    </div>


</main>
