@{
    ViewBag.Title = "MisAnimales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-minimal {
        border: 1px solid transparent;
        border-radius: 6px;
        padding: 1rem 0;
        transition: all 0.3s ease;
        cursor: pointer;
        display: block;
        color: #212529;
        font-weight: 600;
        text-decoration: none;
        border-color: #dedede;
    }

        .btn-minimal:hover,
        .btn-minimal:focus {
            border-color: #808080;
            box-shadow: 0 4px 8px #808080;
            text-decoration: none;
        }

        .btn-minimal span {
            display: block;
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }
</style>

<main class="container py-5">

    <!-- Menú rápido tipo dashboard minimalista con borde y sombra hover -->
    <div class="row justify-content-center mb-5 text-center">
        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("editarPerfil", "MiPerfil")" class="btn-minimal">
                <span>🏠</span>
                DASHBOARD
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisDonaciones", "MiPerfil")" class="btn-minimal">
                <span>💰</span>
                MIS DONACIONES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisAnimales", "MiPerfil")" class="btn-minimal">
                <span>🐾</span>
                MIS ANIMALES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisTours", "MiPerfil")" class="btn-minimal">
                <span>🎟️</span>
                MIS TOURS
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisEventos", "MiPerfil")" class="btn-minimal">
                <span>💛</span>
                MIS EVENTOS
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("Editar", "MiPerfil")" class="btn-minimal">
                <span>✏️</span>
                EDITAR
            </a>
        </div>
    </div>

    <!-- Animales Apadrinados -->
    <div class="text-center mb-4">
        <h4 class="fw-bold">MIS ANIMALES APADRINADOS</h4>
    </div>

    <div class="row">
        <!-- Card del animal -->
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title fw-bold">Coco</h5>
                    <p class="card-text"><strong>Raza:</strong> Cocodrilo</p>
                    <p class="card-text"><strong>Especie:</strong> Reptil</p>
                    <p class="card-text"><strong>Estado de Salud:</strong> Herido</p>
                    <p class="card-text">
                        Coco está en un área cercada del refugio, tumbado cerca del agua con una pata trasera vendada.
                        Lo encontraron herido en un río donde solían arrojar basura y redes de pesca. La herida, probablemente
                        causada por un anzuelo, aún requiere atención diaria.
                    </p>
                    <div class="mt-auto">
                        <button class="btn btn-outline-danger w-100">Finalizar Apadrinamiento</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
