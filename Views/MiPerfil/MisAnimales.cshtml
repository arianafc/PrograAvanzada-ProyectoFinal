@model IEnumerable<ProyectoFinal.Models.AnimalViewModel>

@{
    ViewBag.Title = "MisAnimales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-minimal {
        border: 1px solid transparent;
        border-radius: 6px;
        padding: 1rem 0;
        transition: all 0.3s ease;
        cursor: pointer;
        display: block;
        color: #212529;
        font-weight: 600;
        text-decoration: none;
        border-color: #dedede;
    }

        .btn-minimal:hover,
        .btn-minimal:focus {
            border-color: #808080;
            box-shadow: 0 4px 8px #808080;
            text-decoration: none;
        }

        .btn-minimal span {
            display: block;
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }

    .img-animal {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 6px;
    }
</style>

<main class="container py-5">

    <div class="row justify-content-center mb-5 text-center">
        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MiPerfil", "MiPerfil")" class="btn-minimal">
                <span>✏️</span>
                MI INFORMACIÓN
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisDonaciones", "MiPerfil")" class="btn-minimal">
                <span>💰</span>
                MIS DONACIONES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisAnimales", "MiPerfil")" class="btn-minimal">
                <span>🐾</span>
                MIS ANIMALES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisTours", "MiPerfil")" class="btn-minimal">
                <span>🎟️</span>
                MIS ACTIVIDADES
            </a>
        </div>
    </div>

    <div class="text-center mb-4">
        <h4 class="fw-bold">MIS ANIMALES APADRINADOS</h4>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var animal in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 text-center">
                        <div class="card-body d-flex flex-column">
                            <img src="@Url.Content("~/" + animal.IMAGEN)" alt="@animal.NOMBRE_ANIMAL" class="img-animal mb-3" />

                            <h5 class="card-title fw-bold">@animal.NOMBRE_ANIMAL</h5>

                            @if (animal.FECHA_INICIO != default(DateTime))
                            {
                                <p><strong>Inicio del apadrinamiento:</strong> @animal.FECHA_INICIO.ToString("dd/MM/yyyy")</p>
                            }

                            <p><strong>Raza:</strong> @animal.RAZA</p>
                            <p><strong>Especie:</strong> @animal.ESPECIE</p>
                            <p><strong>Monto mensual:</strong> $@animal.MONTO_MENSUAL</p>

                            @if (!string.IsNullOrEmpty(animal.REFERENCIA))
                            {
                                <p><strong>Referencia:</strong> @animal.REFERENCIA</p>
                            }

                            <div class="d-grid gap-2">
                                @using (Html.BeginForm("FinalizarApadrinamiento", "MiPerfil", FormMethod.Post))
                                {
                                    @Html.Hidden("idAnimal", animal.ID_ANIMAL)
                                    <button type="submit" class="btn btn-danger w-100 mt-2">
                                        Finalizar Apadrinamiento
                                    </button>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4>No tienes animales apadrinados aún.</h4>
                    <p>¡Explora nuestro refugio y elige a tu nuevo ahijado!</p>
                </div>
            </div>
        }
    </div>

</main>
