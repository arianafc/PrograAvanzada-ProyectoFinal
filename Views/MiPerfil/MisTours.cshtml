@model IEnumerable<ProyectoFinal.Models.MisToursViewModel>

@{
    ViewBag.Title = "Mis Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-minimal {
        border: 1px solid transparent;
        border-radius: 6px;
        padding: 1rem 0;
        transition: all 0.3s ease;
        cursor: pointer;
        display: block;
        color: #212529;
        font-weight: 600;
        text-decoration: none;
        border-color: #dedede;
    }

        .btn-minimal:hover,
        .btn-minimal:focus {
            border-color: #808080;
            box-shadow: 0 4px 8px #808080;
            text-decoration: none;
        }

        .btn-minimal span {
            display: block;
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }
</style>

<main class="container py-5">

    <div class="row justify-content-center mb-5 text-center">
        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MiPerfil", "MiPerfil")" class="btn-minimal">
                <span>✏️</span>
                MI INFORMACIÓN
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisDonaciones", "MiPerfil")" class="btn-minimal">
                <span>💰</span>
                MIS DONACIONES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisAnimales", "MiPerfil")" class="btn-minimal">
                <span>🐾</span>
                MIS ANIMALES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisTours", "MiPerfil")" class="btn-minimal">
                <span>🎟️</span>
                MIS ACTIVIDADES
            </a>
        </div>
    </div>

    <div class="text-center mb-4">
        <h4 class="fw-bold">MIS ACTIVIDADES RESERVADAS</h4>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            @foreach (var tour in Model)
            {
                <div class="col d-flex justify-content-center">
                    <div class="card h-100 shadow-sm text-center" style="width: 18rem;">
                        <img src="@Url.Content("~/" + tour.IMAGEN)"
                             alt="@tour.NOMBRE"
                             class="card-img-top img-fluid rounded-top mx-auto"
                             style="height:200px; width:200px;" />
                        <div class="card-body">
                            <h5 class="card-title">@tour.NOMBRE</h5>
                            <p class="card-text text-muted">@tour.DESCRIPCION</p>
                            <p class="mb-1"><strong>Fecha:</strong> @tour.FECHA.ToString("dd/MM/yyyy")</p>
                            <p class="mb-1"><strong>Boletos adquiridos:</strong> @tour.TICKETS_ADQUIRIDOS</p>
                            <p class="mb-1"><strong>Total:</strong> ₡@tour.TOTAL.ToString("N2")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center">
            <div class="alert alert-info text-center" role="alert">
                No tienes boletos adquiridos aún. ¡Explora nuestros tours y adquiere el tuyo!
            </div>
        </div>
    }


</main>
