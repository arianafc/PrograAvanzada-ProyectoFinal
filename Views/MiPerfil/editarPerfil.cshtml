@{
    ViewBag.Title = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-minimal {
        border: 1px solid transparent;
        border-radius: 6px;
        padding: 1rem 0;
        transition: all 0.3s ease;
        cursor: pointer;
        display: block;
        color: #212529; 
        font-weight: 600;
        text-decoration: none;
        border-color: #dedede; 
    }

        .btn-minimal:hover,
        .btn-minimal:focus {
            border-color: #808080; 
            box-shadow: 0 4px 8px #808080;
            text-decoration: none;
        }

        .btn-minimal span {
            display: block;
            font-size: 1.5rem;
            margin-bottom: 0.25rem;
        }
</style>

<main class="container py-5">

    <!-- Menú rápido tipo dashboard minimalista con borde y sombra hover -->
    <div class="row justify-content-center mb-5 text-center">
        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("editarPerfil", "MiPerfil")" class="btn-minimal">
                <span>🏠</span>
                DASHBOARD
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisDonaciones", "MiPerfil")" class="btn-minimal">
                <span>💰</span>
                MIS DONACIONES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisAnimales", "MiPerfil")" class="btn-minimal">
                <span>🐾</span>
                MIS ANIMALES
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisTours", "MiPerfil")" class="btn-minimal">
                <span>🎟️</span>
                MIS TOURS
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("MisEventos", "MiPerfil")" class="btn-minimal">
                <span>💛</span>
                MIS EVENTOS
            </a>
        </div>

        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <a href="@Url.Action("Editar", "MiPerfil")" class="btn-minimal">
                <span>✏️</span>
                EDITAR
            </a>
        </div>
    </div>

    <!-- Perfil -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-5 mb-4">
            <div class="border p-4 rounded shadow-sm h-100">
                <h4 class="fw-bold text-center mb-3">TU CUENTA</h4>
                <p><strong>Nombre:</strong> @Session["Nombre"] @Session["Apellido1"] @Session["Apellido2"]</p>
                <p><strong>Email:</strong> @Session["email"]</p>
                <p><strong>Dirección:</strong> @ViewBag.Direccion</p>
            </div>
        </div>
    </div>




</main>


