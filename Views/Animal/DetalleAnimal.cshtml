@model ProyectoFinal.EF.ObtenerAnimalPorIdSP_Result

@{
    ViewBag.Title = "Detalles de " + Model.NOMBRE_ANIMAL;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Animales", "Index", "Animales")
                    </li>
                    <li class="breadcrumb-item active">@Model.NOMBRE_ANIMAL</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-0">
                    <img src="@Url.Content("~/" + Model.IMAGEN)" alt="@Model.NOMBRE_ANIMAL" class="img-animal" />
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header nombreAnimal">
                    <h3 class="card-title mb-0">
                        @Model.NOMBRE_ANIMAL
                    </h3>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Raza:</strong> @Model.NOMBRE_RAZA</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Estado de salud:</strong> @Model.DESCRIPCION</p>
                        </div>
                    </div>

                    <div class="row">
                        @if (Model.FECHA_INGRESO != default(DateTime))
                        {
                            <div class="col-md-6">
                                <p><strong>Fecha de ingreso:</strong></p>
                                <p class="text-muted">@Model.FECHA_INGRESO.ToString("dd/MM/yyyy")</p>
                            </div>
                        }

                        @if (Model.FECHA_NACIMIENTO != default(DateTime))
                        {
                            <div class="col-md-6">
                                <p><strong>Fecha de nacimiento:</strong></p>
                                <p class="text-muted">@Model.FECHA_NACIMIENTO.ToString("dd/MM/yyyy")</p>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.HISTORIA))
                    {
                        <div class="mt-4">
                            <h5>Historia</h5>
                            <p class="text-justify">@Model.HISTORIA</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.NECESIDAD))
                    {
                        <div class="mt-4">
                            <h5>Necesidades Especiales</h5>
                            <div class="alert alert-info">
                                @Model.NECESIDAD
                            </div>
                        </div>
                    }
                </div>

                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        @Html.ActionLink("Volver", "ConsultarAnimales", "Animal", null,
                                        new { @class = "volver-btn" })

                        @Html.ActionLink("Apadrinar a " + Model.NOMBRE_ANIMAL, "ApadrinarAnimal", "Apadrinamiento",
                                        new { id = Model.ID_ANIMAL },
                                        new { @class = "apadrinar-btn" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>