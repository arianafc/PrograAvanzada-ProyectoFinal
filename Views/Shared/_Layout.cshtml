<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Casa Natura</title>

    <!-- Fuentes e íconos -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilos -->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/navbar.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Logo -->
            <div class="navbar-brand fw-bold ps-3">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/imagenes/logo.png" alt="Logo" class="img" />
                    <span style="margin-left: 10px;">CASA<span class="highlight">NATURA</span></span>
                </a>
            </div>

            <!-- Links -->
            <ul class="nav-links navbar-nav hide">
                <!-- Botón que cierra (solo móvil) -->
                <div class="hide-toggle d-block d-sm-none">
                    <i class="fa-solid fa-xmark"></i>
                </div>

                @Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("DONACIONES", "Donaciones", "Donacion", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("APADRINAR", "ConsultarAnimales", "Animal", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("ACTIVIDADES", "ActividadesDisponibles", "Actividades", new { area = "" }, new { @class = "nav-link" })
                @Html.ActionLink("CONTACTO", "Contacto", "Contacto", new { area = "" }, new { @class = "nav-link" })

                @if (Session["Nombre"] != null)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="ms-2">Hola, @Session["Nombre"]</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("MiPerfil", "MiPerfil")">
                                    <i class="fa fa-user me-2"></i> Mi Perfil
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("CerrarSesion", "Home")">
                                    <i class="fa fa-sign-out-alt me-2"></i> Salir
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link user-icon-link" href="@Url.Action("IniciarSesion", "Home")">
                            <i class="fa fa-user"></i>
                        </a>
                    </li>
                }
            </ul>

            <!-- Botón que abre el menu (solo móvil) -->
            <div class="menu-toggle d-block d-sm-none">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO -->
    <div class="container body-content">
        @RenderBody()
        <br />
    </div>

    <!-- FOOTER -->
    <div class="pg-footer">
        <footer class="footer">
            <svg class="footer-wave-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 100" preserveAspectRatio="none">
                <path class="footer-wave-path" d="M851.8,100c125,0,288.3-45,348.2-64V0H0v44c3.7-1,7.3-1.9,11-2.9C80.7,22,151.7,10.8,223.5,6.3C276.7,2.9,330,4,383,9.8 c52.2,5.7,103.3,16.2,153.4,32.8C623.9,71.3,726.8,100,851.8,100z"></path>
            </svg>
            <div class="footer-content">
                <!-- Columna logo -->
                <div class="footer-content-column">
                    <div class="footer-logo">
                        <img src="~/Imagenes/logo.png" />
                    </div>
                </div>
                <!-- Columna donaciones -->
                <div class="footer-content-column">
                    <div class="footer-menu">
                        <h2 class="footer-menu-name"> DONACIONES</h2>
                        <ul class="footer-menu-list">
                            <li><a href="@Url.Action("Donaciones", "Donacion")">Quiero donar</a></li>
                        </ul>
                    </div>
                </div>
                <!-- Columna nosotros -->
                <div class="footer-content-column">
                    <div class="footer-menu">
                        <h2 class="footer-menu-name"> Nosotros</h2>
                        <ul class="footer-menu-list">
                            <li><a href="@Url.Action("Nosotros", "Home")">Conócenos</a></li>
                        </ul>
                    </div>
                </div>
                <!-- Columna servicios -->
                <div class="footer-content-column">
                    <div class="footer-menu">
                        <h2 class="footer-menu-name"> TE OFRECEMOS</h2>
                        <ul class="footer-menu-list">
                            <li><a href="@Url.Action("ApadrinarAnimal", "ConsultarAnimales")">Apadrinar</a></li>
                            <li><a href="@Url.Action("ActividadesDisponibles", "Actividades")">Tours</a></li>
                            <li><a href="@Url.Action("ActividadesDisponibles", "Actividades")">Eventos</a></li>
                        </ul>
                    </div>
                </div>
                <!-- Columna contacto -->
                <div class="footer-content-column">
                    <div class="footer-menu">
                        <h2 class="footer-call-to-action-title"> Habla con nosotros</h2>
                        <p class="footer-call-to-action-description"> ¿Tienes alguna consulta?</p>
                        <a class="footer-call-to-action-button button" href="@Url.Action("Contacto", "Contacto")"> Contactar </a>
                    </div>
                </div>
            </div>

            <div class="footer-copyright">
                <div class="footer-copyright-wrapper">
                    <p class="footer-copyright-text">
                        <a href="#">©2025 | Casa Natura | Derechos Reservados</a>
                    </p>
                </div>
            </div>
        </footer>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Scripts -->
    <script src="~/Scripts/CasaNatura.js"></script>
    <script src="~/Scripts/Autenticacion.js"></script>

    <!-- SweetAlert -->
    <script>
        var swalError = '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SwalError"]?.ToString() ?? ""))';
        var swalSuccess = '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SwalSuccess"]?.ToString() ?? ""))';
        var LoginUrl = '@Url.Action("IniciarSesion", "Home")';
    </script>

    <!-- Script para abrir/cerrar menú -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const menuToggle = document.querySelector(".menu-toggle");
            const hideToggle = document.querySelector(".hide-toggle");
            const navLinks = document.querySelector(".nav-links");

            if (menuToggle) {
                menuToggle.addEventListener("click", () => {
                    navLinks.classList.remove("hide");
                    navLinks.classList.add("show");
                });
            }

            if (hideToggle) {
                hideToggle.addEventListener("click", () => {
                    navLinks.classList.remove("show");
                    navLinks.classList.add("hide");
                });
            }
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
