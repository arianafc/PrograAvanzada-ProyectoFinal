@model ProyectoFinal.Models.GestionActividadesModel


@{
    ViewBag.Title = "Gestión Actividades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="container py-5">
    <div class="row">
        <div>
            <div class="bg-white p-3 rounded shadow">
                <div class="row">
                    <div class="col-md-12">       <h3 class="w-bold mb-3 text-center"><b>GESTIÓN DE ACTIVIDADES</b></h3></div>
                    <div class="col-sm-12">
                        <button class="AgregarBtn w-100 justify-content-center d-flex text-white"
                                data-bs-toggle="modal"
                                data-bs-target="#modalActividad">
                            Nueva Actividad
                        </button>

                    </div>


                </div>

                <hr />
                <div class="table-responsive">
                    <table id="tablaActividades" class="tabla-donaciones p-5 table-bordered text-center align-middle">

                        <thead class="HeadTablaActividades">
                            <tr>
                                <th>Nombre</th>
                                <th>Fecha</th>
                                <th>Precio</th>
                                <th>Disponibles</th>
                                <th>Vendidos</th>
                                <th>Tipo</th>
                                <th>Estado</th>
                                <th>Imagen</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var act in Model.ListaActividades)
                            {
                                <tr>
                                    <td>@act.NOMBRE</td>
                                    <td>@act.FECHA</td>
                                    <td>₡@act.PRECIO_BOLETO</td>
                                    <td>@act.TICKETS_DISPONIBLES</td>
                                    <td>@act.TICKETS_VENDIDOS</td>
                                    <td>@act.TIPO</td>

                                    <td>
                                        <span class="badge @(act.ID_ESTADO == 1 ? "badge-activo" : "badge-inactivo")">
                                            @(act.ID_ESTADO == 1 ? "Activo" : "Inactivo")
                                        </span>
                                    </td>

                                    <td>
                                        @if (act.IMAGEN != null)
                                        {
                                            <img src="@act.IMAGEN" alt="Actividad" class="img-actividad" />
                                        }
                                        else
                                        {
                                            <span>Sin imagen</span>
                                        }
                                    </td>

                                    <td>
                                        <form action="@Url.Action("CambioEstadoActividad", "Actividades")" class="FormCambiarEstado" method="post" style="display:inline;">
                                            <input type="hidden" name="IdActividad" value="@act.ID_ACTIVIDAD" />
                                            <input type="hidden" name="IdEstado" value="@(act.ID_ESTADO == 1 ? 2 : 1)" />
                                            <button type="submit" class="btn btn-cambiar-estado btn-sm" title="Cambiar estado">
                                                <i class="fa @(act.ID_ESTADO == 1 ? "fa-toggle-on" : "fa-toggle-off")"></i>
                                            </button>
                                        </form>
                                        <button class="btn btn-cambiar-estado btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalEditarActividad"
                                                data-id="@act.ID_ACTIVIDAD"
                                                data-nombre="@act.NOMBRE"
                                                data-fecha="@act.FECHA.ToString("yyyy-MM-dd")"
                                                data-hora="@act.FECHA.ToString("HH:mm")"
                                                data-descripcion="@act.DESCRIPCION"
                                                data-precio="@act.PRECIO_BOLETO"
                                                data-tickets="@act.TICKETS_DISPONIBLES"
                                                data-tipo="@act.TIPO"
                                                data-estado="@act.ID_ESTADO"
                                                data-imagen="@act.IMAGEN">
                                            <i class="fas fa-edit me-2"></i>
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>

        <div class="modal fade" id="modalActividad" tabindex="-1" aria-labelledby="modalActividadLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="modalActividadLabel">CREAR NUEVA ACTIVIDAD</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>

                    <div class="modal-body bg-light p-4 rounded shadow">
                        @using (Html.BeginForm("GestionActividades", "Actividades", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "formCrearActividad" }))
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Nombre)
                                    @Html.TextBoxFor(m => m.NuevaActividad.Nombre, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Tipo)
                                    @Html.DropDownListFor(m => m.NuevaActividad.Tipo,
                                        new SelectList(new[] {
                                            new { Value = "Tour", Text = "Tour" },
                                            new { Value = "Evento", Text = "Evento" }
                                        }, "Value", "Text"),
                                        "Seleccione un tipo",
                                        new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Fecha)
                                    @Html.TextBoxFor(m => m.NuevaActividad.Fecha, "{0:yyyy-MM-dd}", new
                                    {
                                        @type = "date",
                                        @class = "form-control",
                                        required = "required",
                                        @id = "FechaCrear"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.Label("Hora")
                                    @Html.TextBox("Hora", null, new
                                    {
                                        @type = "time",
                                        @class = "form-control",
                                        @name = "Hora",
                                        required = "required"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.PrecioBoleto)
                                    @Html.TextBoxFor(m => m.NuevaActividad.PrecioBoleto, new
                                    {
                                        @type = "number",
                                        @step = "0.01",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.TicketsDisponibles)
                                    @Html.TextBoxFor(m => m.NuevaActividad.TicketsDisponibles, new
                                    {
                                        @type = "number",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.Label("Imagen")
                                    <input type="file" name="ImagenActividad" class="form-control" accept="image/*" />
                                </div>

                                <div class="col-12 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Descripcion)
                                    @Html.TextAreaFor(m => m.NuevaActividad.Descripcion, new
                                    {
                                        @class = "form-control",
                                        rows = 3,
                                        required = "required"
                                    })
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning text-dark">Registrar Actividad</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>



        <div class="modal fade" id="modalEditarActividad" tabindex="-1" aria-labelledby="modalEditarActividadLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="modalEditarActividadLabel">EDITAR ACTIVIDAD</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>

                    <div class="modal-body bg-light p-4 rounded shadow">
                        @using (Html.BeginForm("EditarActividades", "Actividades", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "formEditarActividad" }))
                        {
                            @Html.HiddenFor(m => m.NuevaActividad.IdActividad)
                            @Html.HiddenFor(m => m.NuevaActividad.IdEstado)
                            @Html.HiddenFor(m => m.NuevaActividad.Imagen)

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Nombre)
                                    @Html.TextBoxFor(m => m.NuevaActividad.Nombre, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Tipo)
                                    @Html.DropDownListFor(m => m.NuevaActividad.Tipo,
                                        new SelectList(new[] {
                                            new { Value = "Tour", Text = "Tour" },
                                            new { Value = "Evento", Text = "Evento" }
                                        }, "Value", "Text", Model.NuevaActividad.Tipo),
                                        "Seleccione un tipo",
                                        new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Fecha)
                                    @Html.TextBoxFor(m => m.NuevaActividad.Fecha, "{0:yyyy-MM-dd}", new
                                    {
                                        @type = "date",
                                        @class = "form-control",
                                        required = "required",
                                        @id = "Fecha"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.Label("Hora")
                                    @Html.TextBox("Hora", Model.NuevaActividad.Fecha.ToString("HH:mm"), new
                                    {
                                        @type = "time",
                                        @class = "form-control",
                                        @name = "Hora",
                                        required = "required"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.PrecioBoleto)
                                    @Html.TextBoxFor(m => m.NuevaActividad.PrecioBoleto, new
                                    {
                                        @type = "number",
                                        @step = "0.01",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.TicketsDisponibles)
                                    @Html.TextBoxFor(m => m.NuevaActividad.TicketsDisponibles, new
                                    {
                                        @type = "number",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.Label("Imagen (opcional)")
                                    <input type="file" name="ImagenActividad" class="form-control" accept="image/*" />
                                </div>

                                <div class="col-12 mb-3">
                                    @Html.LabelFor(m => m.NuevaActividad.Descripcion)
                                    @Html.TextAreaFor(m => m.NuevaActividad.Descripcion, new
                                    {
                                        @class = "form-control",
                                        rows = 3,
                                        required = "required"
                                    })
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning text-dark">Actualizar Actividad</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


    </div>
</main>

<script src="@Url.Content("~/Scripts/CasaNatura.js")"></script>

<script>
    //pendiente mover el script 

    $(document).ready(function () {

        const today = new Date().toISOString().split('T')[0];

       
        $('#FechaCrear, #Fecha').attr('min', today);

      
        $('#formCrearActividad, #formEditarActividad').on('submit', function (e) {
            const formId = $(this).attr('id');
            const fechaInput = formId === 'formCrearActividad' ? '#FechaCrear' : '#Fecha';
            const fechaSeleccionada = $(fechaInput).val();

            if (fechaSeleccionada < today) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Fecha no válida',
                    text: 'La fecha seleccionada no puede ser anterior a hoy.',
                    confirmButtonColor: '#dc3545'
                });
            }
        });


    @if (TempData["SwalSuccess"] != null) {
        <text>
            Swal.fire({
                icon: 'success',
            title: '¡Éxito!',
            text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SwalSuccess"].ToString()))',
            confirmButtonColor: '#3085d6'
                    });
        </text>
    }

    @if (TempData["SwalError"] != null) {
        <text>
            Swal.fire({
                icon: 'error',
            title: '¡Error!',
            text: '@Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SwalError"].ToString()))',
            confirmButtonColor: '#d33'
                    });
        </text>
    }


        $('#tablaActividades').DataTable({
            language: {
                "search": "Buscar:",
                "lengthMenu": "Mostrar _MENU_ registros",
                "info": "Mostrando _START_ a _END_ de _TOTAL_ actividades",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                },
                "zeroRecords": "No se encontraron resultados",
                "infoEmpty": "No hay actividades para mostrar",
                "infoFiltered": "(filtrado de _MAX_ actividades totales)"
            }
        });


        $('#modalEditarActividad').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modal = $(this);

            modal.find('input[name="NuevaActividad.IdActividad"]').val(button.data('id'));
            modal.find('input[name="NuevaActividad.Imagen"]').val(button.data('imagen'));
            modal.find('input[name="NuevaActividad.IdEstado"]').val(button.data('estado'));
            modal.find('input[name="NuevaActividad.Nombre"]').val(button.data('nombre'));
            modal.find('input[name="NuevaActividad.Fecha"]').val(button.data('fecha'));
            modal.find('input[name="Hora"]').val(button.data('hora'));
            modal.find('textarea[name="NuevaActividad.Descripcion"]').val(button.data('descripcion'));
            modal.find('input[name="NuevaActividad.PrecioBoleto"]').val(button.data('precio'));
            modal.find('input[name="NuevaActividad.TicketsDisponibles"]').val(button.data('tickets'));
            modal.find('select[name="NuevaActividad.Tipo"]').val(button.data('tipo'));
        });
        $(".FormCambiarEstado").submit(function (e) {
            e.preventDefault();

            const form = this;

            Swal.fire({
                title: '¿Está seguro?',
                text: "¿Desea cambiar el estado de esta actividad?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, cambiar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit(); // Se envía el formulario específico
                }
            });
        });
    });


</script>