@model ProyectoFinal.Models.GestionActividadesModel


@{
    ViewBag.Title = "Gestión Actividades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">


<div class="dudas-container">
    <h2 class="TituloSeccion">Gestión de Actividades <i class="fas fa-calendar-check" style="color: #17a2b8"></i></h2>

    <div class="row">
        
        <div class="col-sm-2">
            <button class="AgregarBtn w-100 justify-content-center d-flex text-white"
                    data-bs-toggle="modal"
                    data-bs-target="#modalActividad">
                Nueva Actividad +
            </button>

        </div>


    </div>
     <hr />

    <table class="tabla-donaciones text-center dt-responsive nowrap w-100" style="font-family: 'Montserrat', sans-serif !important;" id="TablaActividades">
        <thead class="text-center">
            <tr>
                <th>NOMBRE</th>
                <th>FECHA</th>
                <th>PRECIO</th>
                <th>DISPONIBLES</th>
                <th>VENDIDOS</th>
                <th>TIPO</th>
                <th>ESTADO</th>
                <th>IMAGEN</th>
                <th>ACCIONES</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var act in Model.ListaActividades)
            {
                <tr>
                    <td>@act.NOMBRE</td>
                    <td>@act.FECHA</td>
                    <td>₡@act.PRECIO_BOLETO</td>
                    <td>@act.TICKETS_DISPONIBLES</td>
                    <td>@act.TICKETS_VENDIDOS</td>
                    <td>@act.TIPO</td>

                    <td>
                        <span class="badge @(act.ID_ESTADO == 1 ? "badge-activo" : "badge-inactivo")">
                            @(act.ID_ESTADO == 1 ? "Activo" : "Inactivo")
                        </span>
                    </td>

                    <td>
                        @if (act.IMAGEN != null)
                        {
                            <img src="@act.IMAGEN" alt="Actividad" class="img-actividad" />
                        }
                        else
                        {
                            <span>Sin imagen</span>
                        }
                    </td>

                    <td>
                        <form action="@Url.Action("CambioEstadoActividad", "Actividades")" class="FormCambiarEstado" method="post" style="display:inline;">
                            <input type="hidden" name="IdActividad" value="@act.ID_ACTIVIDAD" />
                            <input type="hidden" name="IdEstado" value="@(act.ID_ESTADO == 1 ? 2 : 1)" />
                            <button type="submit" class="btn btn-cambiar-estado btn-sm" title="Cambiar estado">
                                <i class="fa @(act.ID_ESTADO == 1 ? "fa-toggle-on" : "fa-toggle-off")"></i>
                            </button>
                        </form>
                        <button class="btn btn-cambiar-estado btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#modalEditarActividad"
                                data-id="@act.ID_ACTIVIDAD"
                                data-nombre="@act.NOMBRE"
                                data-fecha="@act.FECHA.ToString("yyyy-MM-dd")"
                                data-hora="@act.FECHA.ToString("HH:mm")"
                                data-descripcion="@act.DESCRIPCION"
                                data-precio="@act.PRECIO_BOLETO"
                                data-tickets="@act.TICKETS_DISPONIBLES"
                                data-tipo="@act.TIPO"
                                data-estado="@act.ID_ESTADO"
                                data-imagen="@act.IMAGEN">
                            <i class="fas fa-edit me-2"></i>
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


<div class="modal fade" id="modalActividad" tabindex="-1" aria-labelledby="modalActividadLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="modalActividadLabel">CREAR NUEVA ACTIVIDAD</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>

                    <div class="modal-body bg-light p-4 rounded shadow">
                        @using (Html.BeginForm("GestionActividades", "Actividades", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "formCrearActividad" }))
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label>Nombre de la Actividad</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.Nombre, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Tipo de Actividad</label>
                                    @Html.DropDownListFor(m => m.NuevaActividad.Tipo,
                                        new SelectList(new[] {
                                            new { Value = "Tour", Text = "Tour" },
                                            new { Value = "Evento", Text = "Evento" }
                                        }, "Value", "Text"),
                                        "Seleccione un tipo",
                                        new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Fecha de la Actividad</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.Fecha, "{0:yyyy-MM-dd}", new
                                    {
                                        @type = "date",
                                        @class = "form-control",
                                        required = "required",
                                        @id = "FechaCrear"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Hora de la Actividad</label>
                                    @Html.TextBox("Hora", null, new
                                    {
                                        @type = "time",
                                        @class = "form-control",
                                        @name = "Hora",
                                        required = "required"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Precio del Boleto</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.PrecioBoleto, new
                                    {
                                        @type = "number",
                                        @step = "0.01",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Tickets Disponibles</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.TicketsDisponibles, new
                                    {
                                        @type = "number",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Imagen</label>
                                    <input type="file" name="ImagenActividad" class="form-control" accept="image/*" required="required"/>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Descripción</label>
                                    @Html.TextAreaFor(m => m.NuevaActividad.Descripcion, new
                                    {
                                        @class = "form-control",
                                        rows = 3,
                                        required = "required"
                                    })
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning text-dark">Registrar Actividad</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>


<div class="modal fade" id="modalEditarActividad" tabindex="-1" aria-labelledby="modalEditarActividadLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="modalEditarActividadLabel">EDITAR ACTIVIDAD</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>

                    <div class="modal-body bg-light p-4 rounded shadow">
                        @using (Html.BeginForm("EditarActividades", "Actividades", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "formEditarActividad" }))
                        {
                            @Html.HiddenFor(m => m.NuevaActividad.IdActividad)
                            @Html.HiddenFor(m => m.NuevaActividad.IdEstado)
                            @Html.HiddenFor(m => m.NuevaActividad.Imagen)

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label>Nombre de la Actividad</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.Nombre, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Tipo de Actividad</label>
                                    @Html.DropDownListFor(m => m.NuevaActividad.Tipo,
                                        new SelectList(new[] {
                                            new { Value = "Tour", Text = "Tour" },
                                            new { Value = "Evento", Text = "Evento" }
                                        }, "Value", "Text", Model.NuevaActividad.Tipo),
                                        "Seleccione un tipo",
                                        new { @class = "form-control", required = "required" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Fecha de la Actividad</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.Fecha, "{0:yyyy-MM-dd}", new
                                    {
                                        @type = "date",
                                        @class = "form-control",
                                        required = "required",
                                        @id = "Fecha"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Hora de la Actividad</label>
                                    @Html.TextBox("Hora", Model.NuevaActividad.Fecha.ToString("HH:mm"), new
                                    {
                                        @type = "time",
                                        @class = "form-control",
                                        @name = "Hora",
                                        required = "required"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Precio del Boleto</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.PrecioBoleto, new
                                    {
                                        @type = "number",
                                        @step = "0.01",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Tickets Disponibles</label>
                                    @Html.TextBoxFor(m => m.NuevaActividad.TicketsDisponibles, new
                                    {
                                        @type = "number",
                                        @class = "form-control",
                                        required = "required",
                                        min = "0"
                                    })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Imagen (Opcional) </label>
                                    <input type="file" name="ImagenActividad" class="form-control" accept="image/*" />
                                    <br />
                                    <img id="ImagenExistente" src="" alt="Imagen" style="display:none; max-width:50px; max-height: 50px">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label>Descripción</label>
                                    @Html.TextAreaFor(m => m.NuevaActividad.Descripcion, new
                                    {
                                        @class = "form-control",
                                        rows = 3,
                                        required = "required"
                                    })
                                </div>
                            </div>
                            <hr />
                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning text-dark">Actualizar Actividad</button>
                            </div>


                        }
                    </div>
                </div>
            </div>
        </div>



<script src="~/Scripts/Actividades.js"></script>